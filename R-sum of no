#include <stdio.h>

int findSum(int n) {

    if(n == 1)

        return 1;

    return n + findSum(n - 1);

}

int main() {

    int n;

    scanf("%d", &n);

    if(n >= 1 && n <= 50) {

        int sum = findSum(n);

        printf("The sum of numbers from 1 to %d : %04d\n", n, sum);

    } else {

        printf("Enter a Valid Input!!!!!!!!!!!!!!!!!!\n");

    }

    return 0;

}
