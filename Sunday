#include <stdio.h>

int main() {

    int h, m, s;

    scanf("%d", &h);

    scanf("%d", &m);

    scanf("%d", &s);

    // Convert excess seconds to minutes

    m = m + (s / 60);

    s = s % 60;

    // Convert excess minutes to hours

    h = h + (m / 60);

    m = m % 60;

    printf("Total Number of hours is %d\n", h);

    printf("Total Number of minutes is %d\n", m);

    printf("Total Number of seconds is %d\n", s);

    return 0;

}
